class CustomFileObj {
  constructor(absDirPath, name) {
    const absPath = path.join(absDirPath, name);
    this.path = absPath;
  }

  deleteIfDirectory() {
    const stat = Deno.statSync(this.path);
    if (stat.isDirectory) {
      this.opType = "delete";
    }
  }

  getOp() {
    if (this.opType) {
      return { type: "delete" };
    }
    return null;
  }
}

return CustomFileObj;